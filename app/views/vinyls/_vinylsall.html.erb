<%# the filter js function will use jQuery at the moment%>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://unpkg.com/isotope-layout@3/dist/isotope.pkgd.min.js"></script>

<%# container for all the Vinyl cards Filters%>
<div class="fullpage" data-controller="popup">
<div class="container align-items-right">
  <div class="row align-items-right">
    <div class="col-lg-12">
    <%# # filter can be set by genre %>
      <ul class="filters">
        <li class="active" data-filter="*"><a href="#!">all</a></li>
        <li data-filter=".pop"><a href="#!">pop</a></li>
        <li data-filter=".electro"><a href="#!">electro</a></li>
        <li data-filter=".indie-rock"><a href="#!">indie-rock</a></li>
      </ul>
      <div class="vinyls_card">

        <div class="row">
        <% @vinyls.each do |vinyl| %>
          <div class="col-lg-4 item <%=vinyl.genre%>">
          <%# # for each row 3 cards 1 per vinly %>
            <div class="card">
              <div class="card-head">
              <%= cl_image_tag vinyl.photo.key,
                  width: 400, height: 300, crop: :fill, class: "img-fluid card-img" %>
                <div class="card-overlay"><h2><%= vinyl.genre %></h2></div>
              </div>
              <div class="card-body" >
                <h2><%= vinyl.title %> - By <%= vinyl.artist %></h2>
                <i class="fa-solid fa-compact-disc pop-up" data-action="click->popup#fire"></i>
                <span>rent now!</span>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- The Modal -->
<div class="modal" id="myModal" data-popup-target="popupElement">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
      <h2>💃🏻Yaay so cool you are want to check out this music 🎸</h2>
      </div>

      <!-- Modal Body -->
      <div class="modal-body">
        You can reserve as many vinlys as you want. The vinly owner will simply need
        your contact details. Please submit your reservation vinly here:
        <span><%= link_to "rent this vinyl", bookings_new_path, class:"badge-dark"%></span>
      </div>

      <!-- Modal Footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal" data-action="click->popup#close">Close</button>
      </div>

    </div>
  </div>
</div>
</div>


<script>
// filter function
(function(){

    'use strict';


    let $vinyls_card = $('.vinyls_card');

    $vinyls_card.isotope({
        itemSelector: '.item',
        layoutMode: 'fitRows'
    });

    $('ul.filters > li').on('click', function(e){

        e.preventDefault();

        let filter = $(this).attr('data-filter');

        $('ul.filters > li').removeClass('active');
        $(this).addClass('active');

        $vinyls_card.isotope({filter: filter});

    });

})(jQuery);
</script>

<%= simple_form_for(vinyl) do |v| %>
  <%= v.input :title %>
  <%= v.input :description %>
  <%= v.input :artist %>
  <%= v.input :genre, collection: ['indie-rock', 'electro', 'pop'], include_blank: 'Select Category' %>
  <%= v.input :availability, as: :is_active, as: :boolean %>
  <%= v.input :price %>
  <%= v.input :photo, as: :file %>
  <%= v.submit class: "btn custom-btn form btn-outline-secondary" %>
<% end %>

<div class="container" style="box-shadow: none !important; ">


  <div class="row">
    <div class="text-center w-100">
      <h3 style="text-align: center;margin: 70px 0px 0px 0px; text-transform: uppercase; letter-spacing: 4px; color: #414040;">All Your Bookings of Vinyls</h3>
      <small><%= link_to "Browse Vinyls", vinyls_path, class:"btn btn-outline-dark float-right mt-4" %></small >
    </div>
    <div class="container mb-5 pt-0" style="box-shadow: none !important; ">
      <div class="d-flex justify-content-between my-4 mt-1">
        <span class="mb-2 d-block"><small><em class="text-muted"><%= "You haven't any vinyls yet!" if @vinyls.empty? %></em></small></span>
      </div>
      <div class="row my-2">

        <% @vinyls.each do |vinyl| %>
          <div class="col-12 col-sm-4 mb-4" data-aos="zoom-in">
            <div class="bg-white rounded shadow h-100">
              <div class="row h-100">

                <div class="col-sm-12 col-md-7">
                  <% if vinyl.photo.attached? %>
                     <%= cl_image_tag vinyl.photo.key, crop: :fill, class:"d-block w-100 h-100" %>
                  <% else %>
                    <%= image_tag("vinyltwo.jpg",  class:"d-block w-100 h-100") %>
                  <% end %>
                </div>
                <div class="col-sm-12 col-md-5 p-0">
                  <div class="card-block p-4" style="position: relative; height: 100%;">
                    <strong><%= vinyl.title %> <span class="text-muted font-weight-normal"> <br><%= sprintf("%.2f", vinyl.price) %> $ <i class="fa-solid fa-money-bill"></i></span></strong>
                    <div class="d-flex align-items-end justify-content-between  mt-3 mb-5">
                      <div>
                        <% if vinyl.availability == true %>
                         <i class="far fa-check-square me-2 text-success"></i><small class="flex-grow-1">Available</small>
                        <% else %>
                         <i class="far fa-square me-2 text-danger"></i><small class="flex-grow-1">Not Available</small>
                        <% end %>
                      </div>
                    </div>
                    <div class="d-flex align-items-end pb-4" style="position: absolute; bottom: 0; flex-wrap: wrap;">
                      <small><%= link_to image_tag("edit.png", size: "20x20"), edit_vinyl_path(vinyl), class: "float-right me-5" %></small>
                      <small><%= link_to image_tag("deleteicon.png", size: "20x20"), vinyl_path(vinyl), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{vinyl.title} from your bookings"}, class: "float-right "%></small>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
